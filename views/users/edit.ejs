<%- include('../partials/header.ejs') %>
    <div class="row">
        <div class="col-3 mx-auto my-5">
            Edit a User
            <form action="/users/<%= user._id %>?_method=PATCH" method="post" class="needs-validation" novalidate>
                <div class="form-floating mb-3">
                    <input name="user[name]" type="text" class="form-control" id="name" required placeholder="User Name" value="<%= user.name %>">
                    <label for="name">User Name</label>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a name for user.
                    </div>
                </div>
                <div class="form-floating mb-3">
                    <input name="user[image]" type="text" class="form-control" id="address" required placeholder="user image" value="<%= user.image %>">
                    <label for="address">user image</label>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a image for user.
                    </div>
                </div>
                <div class="form-floating mb-3">
                    <input name="user[username]" type="text" class="form-control" id="price" required placeholder="user username" value="<%= user.username %>" disabled>
                    <label for="price">user username</label>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a price for hotel [from 100 - to 1000].
                    </div>
                </div>



                <input type="submit" value="edit" class="mt-2 btn btn-primary">
            </form>
        </div>
    </div>
    <script src="/scripts/form-validation.js"></script>
    <%- include('../partials/footer.ejs') %>